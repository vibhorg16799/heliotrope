<% style = '' %>
<% style = "height:100%;" if @presenter.image? %>
<% style = "height:100%;overflow:scroll;" if @presenter&.interactive_map? %>
<!DOCTYPE html <%= "style=\"#{style}\"".html_safe if style.length.positive? %>>
  <head>
    <title><%= content_for?(:page_title) ? yield(:page_title) : yield %></title>
    <!-- Ensure all links open outside the iframe, in a new tab -->
    <base target="_blank">
    <!-- CSS -->
    <%= stylesheet_link_tag 'embed' %>
    <%= stylesheet_pack_tag 'ableplayer_embed/build/ableplayer_embed', 'data-turbolinks-track': 'reload' %>
    <!-- Javascript -->
    <%= javascript_include_tag 'embed' %>
    <%= javascript_pack_tag 'ableplayer_embed/build/ableplayer_embed', 'data-turbolinks-track': 'reload' %>
  </head>
  <body <%= "style=\"#{style}\"".html_safe if style.length.positive? %>>
    <%= content_for?(:body) ? yield(:body) : yield %>
  </body>
</html>
